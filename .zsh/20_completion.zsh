# vim: ft=zsh ts=2 sw=2

########################################################################################################
# Initialize completions
########################################################################################################
# set path for own completions
fpath=(~/.zsh/completion $fpath)
# enable completion
autoload -U compinit
compinit
zmodload zsh/complist

########################################################################################################
# enable cache for completion
########################################################################################################
zstyle ':completion:*' cache-path ~/.zsh/cache
zstyle ':completion:*' use-cache on

########################################################################################################
#
########################################################################################################
zstyle ':completion:*:sudo:*' command-path  /usr/local/sbin /usr/local/bin /usr/sbin /usr/bin /sbin /bin /usr/X11R6/bin

########################################################################################################
# Setting dir-colors for autocompletion
########################################################################################################
zstyle ':completion:*'        list-colors   ${(s.:.)LS_COLORS}

########################################################################################################
# Style for completion list that don't fit on the screen
########################################################################################################
zstyle ':completion:*'        list-prompt   %SAt %p: Hit TAB for more, or the character to insert%s

########################################################################################################
# Enable going through the comletions with arrows (menu)
########################################################################################################
zstyle ':completion:*'        menu          select=long-list select=0

########################################################################################################
# Style for completion menu if context don't fit on the screen
########################################################################################################
zstyle ':completion:*'        select-prompt %SScrolling active: current selection at %p%s

########################################################################################################
# `cd . <tab>` shows '.' and '..'
########################################################################################################
zstyle ':completion:*' special-dirs true

########################################################################################################
# enable approximate matches for completion
########################################################################################################
zstyle ':completion:::::' completer _expand _complete _ignored _approximate

########################################################################################################
# completion for kill
########################################################################################################
zstyle ':completion:*:processes' command 'ps -au$USER | uniq'

setopt auto_cd
